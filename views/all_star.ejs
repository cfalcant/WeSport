        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <h1>All-Star</h1>


  <% for (let i = 0;i < lineup.length;i++) { %>
  <% for (let k = 0; k < teams.length;k++) { %>
    <%   if (teams[k].id === lineup[i].team_id) { %>

    <p>Name: <%= `${lineup[i].first_name} ${lineup[i].last_name}` %></p>
    <p>Team: <%=teams[k].team_name%></p>
    <p>Jersey #: <%=lineup[i].jersey%></p>
    <p>Position: <%=lineup[i].position%></p>
    <p>Points/game: <%=lineup[i].points%></p>
    <p>Steals/game: <%=lineup[i].steals%></p>
    <p>Assists/game: <%=lineup[i].assists%></p>
    <p>Blocks/game: <%=lineup[i].blocks%></p>
    <a href="/all_star/remove/<%=lineup[i].id %>">Remove from allstar list</a>
<hr>
<% } %>
<% } %>
<% } %>



